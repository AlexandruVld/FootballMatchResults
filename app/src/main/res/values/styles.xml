<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="columnsLayout">
        <item name="android:paddingLeft">@dimen/layoutColumnPadding</item>
        <item name="android:paddingRight">@dimen/layoutColumnPadding</item>
    </style>

    <style name="columnsHeaderTextViews">
        <item name="android:textColor">@color/button</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/headerTextViewMargin</item>
        <item name="android:textSize">@dimen/headerTextSize</item>
    </style>

    <style name="columnsTextViews">
        <item name="android:textColor">@color/button</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/columnsTextViewPadding</item>
        <item name="android:paddingBottom">@dimen/columnsTextViewPadding</item>
        <item name="android:textSize">@dimen/headerTextSize</item>
    </style>

    <style name="teamsResults">
        <item name="android:textColor">@color/button</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/columnsTextViewPadding</item>
        <item name="android:paddingBottom">@dimen/columnsTextViewPadding</item>
        <item name="android:textSize">@dimen/headerTextSize</item>
    </style>
    <style name="columnsButtons">
        <item name="android:textColor">@color/button</item>
        <item name="android:layout_margin">@dimen/soreButtonMargin</item>
        <item name="android:background">@color/buttonBackground</item>
    </style>

</resources>
